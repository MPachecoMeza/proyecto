<h2>Cambia Tu Contraseña</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="form-inputs">
    <%= f.input :password,
                label: "Nueva Contraseña",
                required: true,
                autofocus: true,
                hint: ("#{@minimum_password_length} Caracteres Mínimo" if @minimum_password_length),
                input_html: { autocomplete: "Nueva-Contraseña" } %>
    <%= f.input :password_confirmation, label: "Confirma Tu Nueva Contraseña", required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Cambiar Mi Contraseña" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
