<div id="wrapper">
<div class="row">
<div class="col-lg-11">
<div class="col-lg-12">
<h1 class="page">REGISTRAR PROGRAMA</h1>
</div>
<div class="panel panel-default">
<div class="panel-heading">
</br>
</br>
<div class="panel-body">
<%= simple_form_for @programa do |f|%>

<div class="formulario">

  <div id="new">

  </br>

<div class="form-group">
<%= f.input :codigo,
  placeholder:"Reg. SNIES"%>
</div>

<div class="form-group">
  <%= f.input :nombre,
   placeholder:"Nombre Programa"%>
</div>

<div class="form-group">
  <%= f.input :encargado,
  placeholder:"Jefe de Programa"%>
</div>

<div class="form-group">
  <%= f.association :facultad, label_method: :nombre%>
</div>

<div class="actions">
 <center><%= f.submit 'Guardar', method: :new,
  data: { confirm: 'Guardar Registro' },
   class:"btn btn-primary active"%>
  </center>
</div>
</div>
<%end%>
</div>
